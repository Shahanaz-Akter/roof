                <div class="content-page mt-5" style="background: #F9F9F9;">
                    <div class="content">

                        <div class="bg-white p-3 mb-2">

                            <h4 class="text-black font-bold mb-3">

                                Product Report
                            </h4>

                            <div style="color: rgb(97 97 97); margin-right: 0.5rem">
                                <span>Report</span>
                                <span>></span>
                                <span>Product Report</span>
                            </div>
                        </div>




                        <!-- Start Content-->
                        <div class="container-fluid card p-4">

                            <div class="mb-5">
                                <h3 class="mb-3">Product Report</h3>

                                <form action="" method="post">

                                    <div class="d-flex justify-content-center flex-wrap  align-items-end gap-4">

                                        <div class="flex-grow-1">
                                            <label for="start_date_input" class="form-label">Starting Date</label>
                                            <input class="form-control" id="start_date_input" type="date" name="date">
                                        </div>

                                        <div class="flex-grow-1">
                                            <label for="end_date_input" class="form-label">Ending Date</label>
                                            <input class="form-control" id="end_date_input" type="date" name="date">
                                        </div>

                                        <div class="text-center">
                                            <button class="btn btn-primary" type="submit">Search</button>
                                        </div>
                                    </div>

                                </form>
                            </div>


                            <table id="expense_list" class="display nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th><input type="checkbox" id="select-all-checkbox"></th>
                                        <th>SL</th>
                                        <th>Product Name</th>
                                        <th>Product Category</th>
                                        <!-- it generate automatically -->
                                        <th>Product Code</th>
                                        <th>Buying Price</th>
                                        <th>Selling Price</th>
                                        <th>Discount</th>
                                        <th>Total Quantity</th>
                                        <th>Date</th>
                                        <th>Action</th>
                                    </tr>


                                </thead>

                                <tbody>
                                    <%products.forEach(product=>{%>

                                        <tr>
                                            <td><input type="checkbox" class="row-checkbox"></td>
                                            <td>
                                                <%=product.id%>
                                            </td>
                                            <td>
                                                <%=product.name%>
                                            </td>
                                            <td>
                                                <%=product.product_category%>
                                            </td> <!-- <td>Architect</td> -->
                                            <td>
                                                <%=product.product_code%>
                                            </td>
                                            <td>
                                                <%=product.buying_price%>
                                            </td>
                                            <td>
                                                <%=product.selling_price%>
                                            </td>
                                            <td>
                                                <%=product.discount%>
                                            </td>
                                            <td>
                                                <%=product.total_qty%>
                                            </td>
                                            <td>
                                                <%=product.date%>
                                            </td>

                                            <td>
                                                <div class="btn-group mb-2">
                                                    <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        Action <i class="mdi mdi-chevron-down"></i>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="/edit_report">
                                                            <svg xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512">
                                                                <path
                                                                    d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z" />
                                                            </svg>
                                                            <span class="ms-1">Edit</span>
                                                        </a>

                                                        <a class="dropdown-item" href="/delete_report">
                                                            <svg xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 448 512">
                                                                <path
                                                                    d="M170.5 51.6L151.5 80h145l-19-28.4c-1.5-2.2-4-3.6-6.7-3.6H177.1c-2.7 0-5.2 1.3-6.7 3.6zm147-26.6L354.2 80H368h48 8c13.3 0 24 10.7 24 24s-10.7 24-24 24h-8V432c0 44.2-35.8 80-80 80H112c-44.2 0-80-35.8-80-80V128H24c-13.3 0-24-10.7-24-24S10.7 80 24 80h8H80 93.8l36.7-55.1C140.9 9.4 158.4 0 177.1 0h93.7c18.7 0 36.2 9.4 46.6 24.9zM80 128V432c0 17.7 14.3 32 32 32H336c17.7 0 32-14.3 32-32V128H80zm80 64V400c0 8.8-7.2 16-16 16s-16-7.2-16-16V192c0-8.8 7.2-16 16-16s16 7.2 16 16zm80 0V400c0 8.8-7.2 16-16 16s-16-7.2-16-16V192c0-8.8 7.2-16 16-16s16 7.2 16 16zm80 0V400c0 8.8-7.2 16-16 16s-16-7.2-16-16V192c0-8.8 7.2-16 16-16s16 7.2 16 16z" />
                                                            </svg>

                                                            <span class="ms-1">Delete</span>
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <%});%>

                                </tbody>

                            </table>

                        </div>
                        <!-- container-fluid -->

                    </div> <!-- content -->

                    <!-- Footer Start -->
                    <%- include('../layouts/footer.ejs') -%>
                        <!-- end Footer -->

                </div>
