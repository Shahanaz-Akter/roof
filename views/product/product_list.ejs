                                                                    <div class="col-12 col-md-3 col-lg-3 col-xl-3 mb-2">
                                                                        <div class="">
                                                                            <%=objects.name%>
                                                                        </div>
                                                                        <div class="" style="background: url('<%=images%>');background-size:cover;background-repeat: no-repeat;background-position:center center; height: 200px;width: auto;">
                                                                        </div>

                                                                    </div>
                                                                    <%});%>

                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% });%>
                                </tbody>

                            </table>

                        </div>
